@{
    ViewBag.Title = "OPEX";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style type="text/css">
        #container {
            min-width: 310px;
            max-width: 800px;
            height: 500px;
            margin: 0 auto
        }
    </style>
</head>

<body>
    <center>
        <h1><img src="~/Content/mytemplate/img/faces/operationsicon.png" style="width:60px; height:60px;" />OPERATIONS AND EXPENSE MANAGEMENT</h1>

        <script src="~/Scripts/code/highcharts.js"></script>
        <script src="~/Scripts/code/modules/series-label.js"></script>
        <script src="~/Scripts/code/modules/exporting.js"></script>

        <div id="container"></div> 

        <script type="text/javascript">
            Highcharts.setOptions({
                colors: ['rgb(62, 194, 207)', '#BCC65C', '#BCC65C', '#FBAE3B']
            });

            Highcharts.chart('container', {

                title: {
                    text: 'OPEX'
                },

                subtitle: {
                    text: 'blahblahblah'
                },

                yAxis: {
                    title: {
                        text: 'Performance'
                    }
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle'
                },

                plotOptions: {
                    series: {
                        label: {
                            connectorAllowed: false
                        },
                        pointStart: 1
                    }
                },

                series: [{
                    name: 'Expense Management',
                    data: [43934, 52503, 57177, 69658, 97031, 119931, 137133, 154175]
                }, {
                    name: 'Net Promoter Score',
                    data: [24916, 24064, 29742, 29851, 32490, 30282, 38121, 40434]
               
                }],

                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                layout: 'horizontal',
                                align: 'center',
                                verticalAlign: 'bottom'
                            }
                        }
                    }]
                }

            });
        </script>

    </center>


</body>
</html>